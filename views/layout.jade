html.no-js(lang='en')
	head
		script
		meta(charset='utf-8')
		link(rel='author', href='/humans.txt', type='text/plain')
		link(rel='shortcut icon', href='/src/assets/favicon.ico', type='image/vnd.microsoft.icon')
		title #{title}

		meta(property="og:title", content="Chico UI")
		meta(property="og:type", content="product")
		meta(property="og:url", content="http://www.chico-ui.com.ar")
		meta(property="og:image", content="http://chico-ui.com.ar/src/assets/ninja.jpg")
		meta(property="og:site_name", content="Chico UI, MercadoLibre&#039;s Open Source Web Tools.")
		meta(property="fb:admins", content="100001929271879")

		//link(rel='stylesheet', href='#{latest.stylesheet.href}')
		link(rel='stylesheet', href='/versions/latest/chico.css')
		link(rel='stylesheet', href='/versions/latest/mesh.css')
		link(rel='stylesheet', href='/src/css/styles.css')
		link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Kreon:300,400,700&v1')
		link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=PT+Serif:regular,italic,bold,bolditalic&v1')
		link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Ubuntu:300,300italic,regular,italic,500,500italic,bold,bolditalic&v1')
					
	body
		.header.clearfix
			h1(title='MercadoLibre\'s Visual Framework')
				a(href='/') Chico UI
				span.version
					#{latest.version}

			ul
				- each item in navigation
					li
						a(href='#{item.href}') #{item.label}
		hr

		!= body

		.clearfix
		hr
		p.footer
			| Â©2011
			a(href='http://www.mercadolibre.com') MercadoLibre
			| . All rights reserved.
		
		<g:plusone size="medium" href="http://www.chico-ui.com.ar"></g:plusone>
		a(href="http://twitter.com/share", class="twitter-share-button", data-via="chicoui", data-text="Chico UI, MercadoLibre's Open Source Web Tools.", data-url='http://chico-ui.com.ar') Tweet

		script(src='/src/js/jquery.js')
		script(src='/versions/latest/chico.js')
		script(src='/src/js/scripts.js')

		/if lt IE 7
			script(src='/src/js/dd_belatedpng.js')
			script
				DD_belatedPNG.fix('img, .ico');

		script
			var _gaq = _gaq || [];
			_gaq.push(['_setAccount', 'UA-22230214-1']);
			_gaq.push(['_setDomainName', '.chico-ui.com.ar']);
			_gaq.push(['_trackPageview']);

			(function() {
			var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
			ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
			var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
			})();

		- var scriptGet = script("get")
		- if (scriptGet.length > 0)
			- for (var i in scriptGet)
				script(src='#{scriptGet[i]}')

		- var scriptCode = script("code")
		-if (scriptCode.length > 0)
			script!= scriptCode.join("")